<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    android:background="@color/darkslategray"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.formulario.MainActivity">

    <LinearLayout

        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:textColor="@color/darkorange"
            android:textSize="18sp"
            android:text="@string/loggin"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:textColorHint="@color/darksalmon"
            android:textColor="@color/white"
            android:id="@+id/edNombre"
            android:inputType="textPersonName"
            android:hint="@string/msg_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <TextView
            android:textColor="@color/darkorange"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/passw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edPassw"
            android:textColor="@color/white"
            android:textColorHint="@color/darksalmon"
            android:inputType="textWebPassword"
            android:hint="@string/msg_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView"
            android:textStyle="bold"
            android:textColor="@color/darkorange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passwconfirm"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edPassconfirm"
            android:textColor="@color/white"
            android:textColorHint="@color/darksalmon"
            android:inputType="textWebPassword"
            android:hint="@string/msg_passconfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:textColor="@color/darkorange"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edMail"
            android:textColor="@color/white"
            android:textColorHint="@color/darksalmon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/msg_correo"
            android:inputType="textWebEmailAddress" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnfecha"
                android:text="@string/fecha"
                android:background="@color/darkorange"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:textColor="@color/white"
                android:textColorHint="@color/darksalmon"
                android:id="@+id/edfecha"
                android:hint="@string/msg_fecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColorHint="@color/darksalmon"
                android:id="@+id/tCiudad"
                android:text="@string/Ciudad"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:backgroundTint="@color/white"

                android:id="@+id/sCiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <RadioButton android:id="@+id/rMasculino"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/masculino"
                    android:buttonTint="@color/white"
                    android:checked="true"
                    android:onClick="onRadioButtonClicked"/>
                <RadioButton android:id="@+id/rFemenino"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/femenino"
                    android:buttonTint="@color/white"
                    android:onClick="onRadioButtonClicked"/>
            </RadioGroup>
        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <CheckBox android:id="@+id/cJugar"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jugar"
                android:buttonTint="@color/white"
                android:onClick="onCheckboxClicked"/>
            <CheckBox android:id="@+id/cPescar"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pescar"
                android:buttonTint="@color/white"
                android:onClick="onCheckboxClicked"/>
            <CheckBox android:id="@+id/cLeer"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leer"
                android:buttonTint="@color/white"
                android:onClick="onCheckboxClicked"/>

            <CheckBox
                android:id="@+id/cPasear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"
                android:buttonTint="@color/white"
                android:text="@string/pasear"
                android:textColor="@color/white" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@color/darkorange"
            android:textColor="@color/white"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="OnButtonCLicked"
            android:text="@string/btn_text" />

    </LinearLayout>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tDatos"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:layout_marginBottom="15dp"
                android:textSize="18sp"
                android:text="@string/datos"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

    </LinearLayout>



    </LinearLayout>




</ScrollView>
